<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:scrollbars="none"
    tools:context=".fragments.TeacherNewSubjectFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <TextView
           android:id="@+id/tvSubjectCheck"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="SUBJECT"
           android:textColor="@color/black"
           android:textSize="40sp"
           android:textStyle="bold" />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/loIdStudCheck"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp">

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/etIdStudCheck"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/light_gray"
               android:enabled="false"
               android:hint="Student ID" />


       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/loIdTeachCheck"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp">

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/etIdTeachCheck"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/light_gray"
               android:enabled="false"
               android:hint="Teacher ID" />


       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/loTeachNameCheck"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp">

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/etTeachNameCheck"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/light_gray"
               android:enabled="false"
               android:hint="Teacher name" />


       </com.google.android.material.textfield.TextInputLayout>


       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/loDateCheck"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           app:endIconDrawable="@drawable/ic_calendar"
           app:endIconMode="custom">

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/etDateCheck"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="date"
               android:background="@color/light_gray"
               android:enabled="false"
               android:hint="Date of appointment" />


       </com.google.android.material.textfield.TextInputLayout>


       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/loPurposeCheck"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp">


           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/etPurposeCheck"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="top"
               android:inputType="textMultiLine"
               android:background="@color/light_gray"
               android:enabled="false"
               android:hint="Purpose of appointment"
               android:lines="6" />


       </com.google.android.material.textfield.TextInputLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginVertical="10dp"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="10dp"
               android:text="Status:"
               android:textSize="18sp" />

           <TextView
               android:id="@+id/tvStatusCheck"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Pending" />


       </LinearLayout>


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10dp"
           android:layout_gravity="end">

           <com.google.android.material.button.MaterialButton
               android:id="@+id/btnAcceptCheck"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="ACCEPT"
               app:cornerRadius="5dp"
               android:backgroundTint="#00EB10"
               android:layout_marginEnd="10dp"/>

           <com.google.android.material.button.MaterialButton
               android:id="@+id/btnDeclineCheck"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="DECLINE"
               android:backgroundTint="#EB0000"
               app:cornerRadius="5dp" />


       </LinearLayout>


   </LinearLayout>


</ScrollView>